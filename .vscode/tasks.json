{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "path": "./editors/code",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceFolder}/editors/code"],
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent",
        "group": "build"
      }
    },
    {
      "label": "Build Server",
      "group": "build",
      "type": "shell",
      "command": "cargo build --package surrealls",
      "problemMatcher": {
        "base": "$rustc",
        "fileLocation": ["relative", "${workspaceFolder}/src"]
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent",
        "group": "build"
      }
    },
    {
      "label": "Build Server and Extension",
      "dependsOn": ["Build Server", "Build Extension"]
    }
  ]
}